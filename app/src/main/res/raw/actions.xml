<Actions>
    <Flags>
        <Flag name = "TWOHANDED"/>
        <Flag name = "LOADING"/>
        <Flag name = "ATTACK" result = "@string/damage"/>
    </Flags>

    <Attack>
        <Action name="ATTACK" show_name="@string/action_attack"
            attributes="AGILITY,FORCE" fatigue="2" />
        <Action name="TWOHANDATTACK" show_name="@string/action_two_hand_attack"
            attributes="AGILITY,FORCE" fatigue="4" flags ="TWOHANDED" />
        <Action name="SHOOT" show_name="@string/action_shoot"
            attributes="AGILITY,ACUITY" fatigue="1"/>
    </Attack>
    <Defend>
        <Action name="DEFEND" show_name="@string/action_defend"
            attributes="AGILITY,SPEED" fatigue="2"/>
        <Action name="KEEPDISTANCE" show_name="@string/action_keep_distance"
            attributes="ACUITY,SPEED" fatigue="2"/>
    </Defend>
    <Mouvement>
        <Action name="RUN" show_name ="@string/action_run"
            attriubtes ="SPEED,SPEED" fatigue="0"/>
        <Action name="ESQUIV" show_name ="@string/action_esquiv"
            attriubtes ="ACUITY,AGILITY" fatigue="0"/>
        <Action name="CLIMB" show_name ="@string/action_climb"
            attriubtes ="FORCE,AGILITY" fatigue="2"/>
        <Action name="SWIM" show_name ="@string/action_swim"
            attriubtes ="STAMINA,PHYSIQUE" fatigue="3"/>
    </Mouvement>
    <Fight>
        <Action name ="LOAD" show_name="@string/action_load"
            attributes ="AGILITY,FORCE" fatigue="3" flags ="LOADING"/>
        <Action name ="FILLMANA" show_name="@string/action_fill_mana"
            attributes = "MAGIC,ASTUTENESS" fatigue="1"/>
        <Action name="THROW" show_name ="@string/action_throw"
            attriubtes ="ACUITY,AGILITY" fatigue="0"/>
        <Action name="CONJURE" show_name ="@string/action_conjure"
            attriubtes ="MAGIC,ASTUTENESS" fatigue="1"/>
        <Action name="STEAL" show_name ="@string/action_steal"
            attriubtes ="ACUITY,AGILITY" fatigue="0"/>
    </Fight>

    <Action name="WEATHERTEST" show_name ="@string/action_cold_sleep"
        attriubtes ="PHYSIQUE,PHYSIQUE" fatigue="0"/>
    <Action name="OTHER" show_name ="@string/action_other"
        attriubtes ="FORCE,FORCE" fatigue="0"/>
    <Action name="MAKEFIRE" show_name ="@string/action_make_fire"
        attriubtes ="ASTUTENESS,AGILITY" fatigue="1"/>
    <Action name="COOK" show_name ="@string/action_cook"
        attriubtes ="STAMINA,AGILITY" fatigue="1"/>
    <Action name="BUTCHER" show_name ="@string/action_butcher"
        attriubtes ="FORCE,STAMINA" fatigue="2"/>
    <Action name="FISHING" show_name ="@string/action_fishing"
        attriubtes ="WILL,AGILITY" fatigue="0"/>
    <Action name="MAKEMUSIC" show_name ="@string/action_make_music"
        attriubtes ="ASTUTENESS,AGILITY" fatigue="1"/>
    <Action name="SING" show_name ="@string/action_sing"
        attriubtes ="CHARM,ASTUTENESS" fatigue="0"/>
</Actions>